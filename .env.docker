# Docker Environment Configuration
# This file is used by docker-compose.yml

# Database Configuration (use service name 'postgres' for Docker networking)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hackathon
DB_USER=postgres
DB_PASSWORD=postgres

# REQUIRED: OpenAI API Key for AI features
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=-------------
OPENAI_MODEL=gpt-4o

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_WORKERS=4

# Authentication
AUTH_PASSWORD=QWERTY

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
UPLOAD_DIR=/app/uploads

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# ML Model Configuration
FLAIR_MODEL_NAME=flair/ner-english-large
FLAIR_CACHE_DIR=/app/models/flair_cache
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=auto

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=200

# Error Logging
ERROR_LOG_RETENTION_DAYS=30
ERROR_LOG_AUTO_CLEANUP=True
ERROR_LOG_CLEANUP_RESOLVED_ONLY=True

# Entity Detection
DETECT_INVALID_ENTITIES=0
