# ===========================================
# AI-Powered Resume Parser Configuration
# ===========================================

# ============================================
# OpenRouter AI Configuration (REQUIRED)
# ============================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-api-key-here
OPENROUTER_MODEL=openai/gpt-4o

# ============================================
# Database Configuration
# ============================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hackathon

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Authentication
# Default password for Bearer token authentication
AUTH_PASSWORD=QWERTY

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=pdf,docx,doc,txt
UPLOAD_DIR=uploads

# ============================================
# Rate Limiting
# ============================================
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=100

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Advanced Settings (Optional)
# ============================================
# Number of parallel AI extraction workers
PARSER_MAX_WORKERS=6

# AI request timeout (seconds)
AI_TIMEOUT=60

# Database connection pool size
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# Notes
# ============================================
# 1. Never commit this file with real API keys to version control
# 2. Copy this file to .env and fill in your actual values
# 3. The .env file is git-ignored by default
# 4. Required fields: OPENROUTER_API_KEY
# 5. All other fields have sensible defaults
